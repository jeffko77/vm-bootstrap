[user]
    name = Your Name
    email = your.email@example.com

[init]
    defaultBranch = main

[pull]
    rebase = false

[core]
    editor = nano
    autocrlf = input

[alias]
    st = status -sb
    co = checkout
    br = branch
    cm = commit -m
    ca = commit --amend
    amend = commit --amend --no-edit
    lg = log --oneline --graph --decorate --all
    ls = log --oneline --graph --decorate
    undo = reset --soft HEAD~1
    unstage = reset HEAD --
    last = log -1 HEAD
    df = diff
    dfs = diff --staged

[credential]
    helper = store

[color]
    ui = auto
